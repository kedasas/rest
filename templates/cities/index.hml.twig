{% extends 'base.html.twig' %}

{% block title %}Weathers{% endblock %}

{% block body %}
    <nav class="navbar navbar-light bg-light">
        <span class="navbar-brand mb-0 h1">Weathers Rest Page</span>
    </nav>
    <div class="container">
        <div id="city_alert" class="alert d-none" role="alert" >
        </div>
        <div class="row align-items-center">
            <div class="col-6">
                <form id="weather_form" action="{{ path('cities') }}" method="post">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Apiid" placeholder="API key" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="input-group col-sm-10">
                            <input type="text" class="form-control" name="City" placeholder="City"
                                   aria-describedby="basic-addon2" value="">
                            <div class="input-group-append">
                                <button class="btn btn-success" name="submit_form" id="submit_btn" type="submit">
                                    <span class="spinner-border spinner-border-sm d-none"></span>
                                    <i class="fa fa-check " aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div id="cities_tabs" class="col-12">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/js/project.js') }}"></script>
{% endblock %}
